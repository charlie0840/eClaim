<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@drawable/regbackground"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorBlack"
        android:alpha="0.3">
    </RelativeLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/profile_logout_button">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:id="@+id/first_layer"
                android:alpha="0.6"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/cycle">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/profile_photo"
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/profilephoto"/>
                <RelativeLayout
                    android:id="@+id/name_layout"
                    android:layout_toRightOf="@+id/profile_photo"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:id="@+id/name_title"
                        android:text="Name:"
                        android:textSize="15dp"
                        android:textColor="@color/colorBlack"/>
                    <TextView
                        android:id="@+id/pro_name_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignTop="@+id/name_title"
                        android:layout_alignBottom="@+id/name_title"
                        android:layout_toRightOf="@+id/name_title"
                        android:textColor="@color/colorBlack"
                        android:textSize="15dp"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/profile_photo"
                    android:layout_alignBottom="@+id/profile_photo"
                    android:layout_marginBottom="15dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginLeft="10dp">
                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:id="@+id/phone_title"
                        android:text="Phone #:"
                        android:textSize="15dp"
                        android:textColor="@color/colorBlack" />

                    <TextView
                        android:id="@+id/pro_phone_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignTop="@+id/phone_title"
                        android:layout_alignBottom="@+id/phone_title"
                        android:layout_toRightOf="@+id/phone_title"
                        android:textSize="15dp"
                        android:textColor="@color/colorBlack"/>
                </RelativeLayout>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/second_layer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/first_layer">
                <RelativeLayout
                    android:id="@+id/entire_id_section"
                    android:alpha="0.6"
                    android:layout_margin="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:background="@drawable/cycle">
                    <RelativeLayout
                        android:id="@+id/id_section"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_margin="10dp">
                        <TextView
                            android:id="@+id/id_section_title"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="10dp"
                            android:textSize="30dp"
                            android:textStyle="bold"
                            android:textColor="@color/colorBlack"
                            android:text="Your ID"/>
                    </RelativeLayout>
                    <ImageSwitcher
                        android:id="@+id/ID_switch"
                        android:layout_width="250dp"
                        android:layout_height="140dp"
                        android:background="@drawable/cycle"
                        android:layout_below="@+id/id_section"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp">
                    </ImageSwitcher>
                    <Button
                        android:id="@+id/id_add_button"
                        android:layout_width="150dp"
                        android:layout_height="45dp"
                        android:layout_margin="10dp"
                        android:layout_centerHorizontal="true"
                        android:layout_below="@+id/ID_switch"
                        android:background="@drawable/btn_background"
                        android:text="Edit your ID"
                        android:textSize="15dp"
                        android:textColor="@color/colorBlack"
                        android:scaleType="fitCenter"/>
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/entire_vehicle_section"
                    android:alpha="0.6"
                    android:layout_margin="20dp"
                    android:layout_height="300dp"
                    android:layout_width="match_parent"
                    android:layout_below="@+id/entire_id_section"
                    android:clickable="true"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:background="@drawable/cycle">
                    <RelativeLayout
                        android:id="@+id/vehicle_section"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_margin="10dp">
                        <TextView
                            android:id="@+id/vehicle_section_title"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="10dp"
                            android:textSize="30dp"
                            android:textStyle="bold"
                            android:textColor="@color/colorBlack"
                            android:text="Your vehicles"/>
                    </RelativeLayout>
                    <ImageSwitcher
                        android:id="@+id/vehicle_switch"
                        android:layout_width="250dp"
                        android:layout_height="140dp"
                        android:background="@drawable/cycle"
                        android:layout_below="@+id/vehicle_section"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp">
                    </ImageSwitcher>
                    <TextView
                        android:id="@+id/profile_vehicle_name_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/vehicle_switch"
                        android:layout_centerHorizontal="true"
                        android:text="Add a vehicle"
                        android:textSize="20dp"
                        android:textColor="@color/colorBlack"/>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/profile_vehicle_name_text">
                        <Button
                            android:id="@+id/profile_delete_vehicle_button"
                            android:layout_width="140dp"
                            android:layout_height="45dp"
                            android:layout_alignParentLeft="true"
                            android:layout_margin="15dp"
                            android:text="Delete Vehicle"
                            android:background="@drawable/btn_background"
                            android:textSize="15dp"
                            android:textColor="@color/colorBlack"/>
                        <Button
                            android:id="@+id/profile_add_vehicle_button"
                            android:layout_width="140dp"
                            android:layout_height="45dp"
                            android:layout_alignParentRight="true"
                            android:layout_margin="15dp"
                            android:text="Add a Vehicle"
                            android:background="@drawable/btn_background"
                            android:textSize="15dp"
                            android:textColor="@color/colorBlack"/>
                    </RelativeLayout>
                </RelativeLayout>
            </RelativeLayout>
        </RelativeLayout>

    </ScrollView>
    <Button
        android:id="@+id/profile_logout_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="45dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:background="@color/colorRed"
        android:alpha="0.8"
        android:textColor="@color/colorBlack"
        android:textSize="25dp"
        android:text="Log out"/>
    <include layout="@layout/navigation_bar"
        android:id="@+id/nav_layout"/>


</RelativeLayout>
