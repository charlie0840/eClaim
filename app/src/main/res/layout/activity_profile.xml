<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@drawable/profilebackground"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/info_section"
        android:alpha="0.6"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/cycle">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_photo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/profilephoto"/>


        <RelativeLayout
            android:id="@+id/name_layout"
            android:layout_toRightOf="@+id/profile_photo"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:id="@+id/name_title"
                android:text="Name:"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/name_field"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/name_title"
                android:layout_alignBottom="@+id/name_title"
                android:layout_toRightOf="@+id/name_title"
                android:text="Charlie Yu"
                android:textSize="20dp"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/profile_photo"
            android:layout_alignBottom="@+id/profile_photo"
            android:layout_marginBottom="15dp"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="10dp">
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:id="@+id/phone_title"
                android:text="Phone #:"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/phone_field"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/phone_title"
                android:layout_alignBottom="@+id/phone_title"
                android:layout_toRightOf="@+id/phone_title"
                android:text="858-349-9882"
                android:textSize="20dp"/>
        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:alpha="0.6"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/info_section"
        android:background="@drawable/cycle">
        <RelativeLayout
            android:id="@+id/id_section"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/id_section_title"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Your id"/>

        </RelativeLayout>

    </RelativeLayout>



</RelativeLayout>