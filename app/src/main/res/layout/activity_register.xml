<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/regbackground">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorBlack"
        android:alpha="0.35">
    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/reg_confirm_btn">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/reg_username_section"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginTop="5dp"
            android:layout_centerHorizontal="true">
            <TextView
                android:id="@+id/reg_username_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:textStyle="bold"
                android:textColor="@color/colorWhite"
                android:text="Username"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/textbackground"
                android:alpha="0.8">
                <ImageView
                    android:id="@+id/reg_username_img"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="10dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/regtextinput"
                    android:scaleType="fitCenter"
                    />
                <EditText
                    android:id="@+id/reg_username"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Type your Username"
                    android:textColorHint="@color/colorWhite"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="5dp"
                    android:textSize="15dp"
                    android:layout_toRightOf="@+id/reg_username_img"
                    android:textColor="@color/colorWhite"/>
            </RelativeLayout>
        </LinearLayout>


        <LinearLayout
            android:id="@+id/reg_firstname_section"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/reg_username_section"
            android:layout_centerHorizontal="true">
            <TextView
                android:id="@+id/reg_fn_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:textStyle="bold"
                android:textColor="@color/colorWhite"
                android:text="First Name"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/textbackground"
                android:alpha="0.8">
                <ImageView
                    android:id="@+id/reg_fn_img"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="10dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/regtextinput"
                    android:scaleType="fitCenter"
                    />
                <EditText
                    android:id="@+id/reg_firstname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Type your first name"
                    android:textColorHint="@color/colorWhite"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="5dp"
                    android:textSize="15dp"
                    android:layout_toRightOf="@+id/reg_fn_img"
                    android:textColor="@color/colorWhite"/>
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/reg_lastname_section"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/reg_firstname_section"
            android:orientation="vertical"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginTop="5dp"
            android:layout_centerHorizontal="true">
            <TextView
                android:id="@+id/reg_ln_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:textStyle="bold"
                android:textColor="@color/colorWhite"
                android:text="Last Name"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/textbackground"
                android:alpha="0.8">
                <ImageView
                    android:id="@+id/reg_ln_img"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="10dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/regtextinput"
                    android:scaleType="fitCenter"
                    />
                <EditText
                    android:id="@+id/reg_lastname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Type your last name"
                    android:textColorHint="@color/colorWhite"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="5dp"
                    android:textSize="15dp"
                    android:layout_toRightOf="@+id/reg_ln_img"
                    android:textColor="@color/colorWhite"/>
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/reg_phone_section"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/reg_lastname_section"
            android:orientation="vertical"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginTop="5dp"
            android:layout_centerHorizontal="true">
            <TextView
                android:id="@+id/reg_phone_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:textStyle="bold"
                android:textColor="@color/colorWhite"
                android:text="Phone #"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/textbackground"
                android:alpha="0.8">
                <ImageView
                    android:id="@+id/reg_phone_img"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="10dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/regphone"
                    android:scaleType="fitCenter"
                    />
                <EditText
                    android:id="@+id/reg_phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Add your phone #"
                    android:textColorHint="@color/colorWhite"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="5dp"
                    android:textSize="15dp"
                    android:layout_toRightOf="@+id/reg_phone_img"
                    android:textColor="@color/colorWhite"/>
            </RelativeLayout>
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/reg_driver_license_section"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/reg_phone_section"
            android:layout_marginTop="20dp"
            android:layout_alignRight="@+id/reg_phone_section">
            <TextView
                android:id="@+id/reg_driver_license_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:textSize="20dp"
                android:textColor="@color/colorWhite"
                android:text="Add Profile Photo"/>
            <ImageView
                android:id="@+id/reg_photo"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_below="@+id/reg_driver_license_title"
                android:layout_centerHorizontal="true"
                android:src="@drawable/regdriverlicense"
                android:scaleType="fitXY"/>

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/reg_email_section"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/reg_driver_license_section"
            android:orientation="vertical"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginTop="5dp"
            android:layout_centerHorizontal="true">
            <TextView
                android:id="@+id/reg_email_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:textStyle="bold"
                android:textColor="@color/colorWhite"
                android:text="Email Address"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/textbackground"
                android:alpha="0.8">
                <ImageView
                    android:id="@+id/reg_email_img"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="10dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/regemail"
                    android:scaleType="fitCenter"
                    />
                <EditText
                    android:id="@+id/reg_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Type email address"
                    android:textSize="15dp"
                    android:textColorHint="@color/colorWhite"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="5dp"
                    android:layout_toRightOf="@+id/reg_email_img"
                    android:textColor="@color/colorWhite"/>
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/reg_password_section"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/reg_email_section"
            android:orientation="vertical"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginTop="5dp"
            android:layout_centerHorizontal="true">
            <TextView
                android:id="@+id/reg_password_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:textStyle="bold"
                android:textColor="@color/colorWhite"
                android:text="Password"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/textbackground"
                android:alpha="0.8">
                <ImageView
                    android:id="@+id/reg_password_img"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="10dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/regpassword"
                    android:scaleType="fitCenter"
                    />
                <EditText
                    android:id="@+id/reg_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Type your password"
                    android:textColorHint="@color/colorWhite"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="5dp"
                    android:textSize="15dp"
                    android:layout_toRightOf="@+id/reg_password_img"
                    android:textColor="@color/colorWhite"/>
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/reg_confirmpassword_section"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/reg_password_section"
            android:orientation="vertical"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginTop="5dp"
            android:layout_centerHorizontal="true">
            <TextView
                android:id="@+id/reg_confirmpassword_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:textStyle="bold"
                android:textColor="@color/colorWhite"
                android:text="Confirm Password"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/textbackground"
                android:alpha="0.8">
                <ImageView
                    android:id="@+id/reg_confirmpassword_img"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="10dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/regpassword"
                    android:scaleType="fitCenter"
                    />
                <EditText
                    android:id="@+id/reg_confirmpassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Confirm password"
                    android:textColorHint="@color/colorWhite"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="5dp"
                    android:textSize="15dp"
                    android:layout_toRightOf="@+id/reg_confirmpassword_img"
                    android:textColor="@color/colorWhite"/>
            </RelativeLayout>
        </LinearLayout>


    </RelativeLayout>
    </ScrollView>
    <Button
        android:id="@+id/reg_confirm_btn"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:textColor="@color/colorWhite"
        android:text="Register"
        android:layout_margin="20dp"
        android:layout_alignParentBottom="true"
        android:background="@color/colorPrimary"
        android:layout_alignParentLeft="true"/>
    <Button
        android:id="@+id/reg_cancel_btn"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:background="@color/colorRed"
        android:text="Cancel"
        android:layout_margin="20dp"/>
    <RelativeLayout
        android:id="@+id/reg_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorBlack"
        android:alpha="0">
        <ProgressBar
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:id="@+id/reg_progressBar"
            android:progressDrawable="@drawable/circular_progress_bar"/>
    </RelativeLayout>
</RelativeLayout>

